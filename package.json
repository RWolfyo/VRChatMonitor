{
  "name": "vrchat-monitor",
  "version": "2.0.1",
  "description": "Advanced VRChat instance monitor with blocklist checking and real-time notifications",
  "type": "commonjs",
  "main": "dist/vrc-monitor.exe",
  "bin": "dist/vrc-monitor.exe",
  "author": "Wolfyo",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npm run build:compile && npm run build:copy && npm run build:sea",
    "build:compile": "esbuild src/index.ts --bundle --platform=node --target=node22 --outfile=build/index.js --format=cjs --external:better-sqlite3",
    "build:copy": "node scripts/copy-assets.js",
    "build:sea": "node scripts/build-sea.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "keyv": "^5.3.4",
    "keyv-file": "^5.2.0",
    "node-notifier": "^10.0.1",
    "vrchat": "^2.20.4",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.5",
    "@types/node-notifier": "^8.0.5",
    "@typescript-eslint/eslint-plugin": "^8.20.0",
    "@typescript-eslint/parser": "^8.20.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.18.0",
    "postject": "^1.0.0-alpha.6",
    "prettier": "^3.4.2",
    "resedit": "^3.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "vrchat",
    "monitor",
    "moderation",
    "safety",
    "blocklist"
  ]
}
